<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:gravity="center"
        android:rowCount="3">

        <!-- Первая кнопка -->
        <Button
            android:id="@+id/menu_button_1"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="#D3D3D3"
            android:text="Кнопка 1"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Вторая кнопка -->
        <Button
            android:id="@+id/menu_button_2"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="#D3D3D3"
            android:text="Кнопка 2"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Третья кнопка -->
        <Button
            android:id="@+id/menu_button_3"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="#D3D3D3"
            android:text="Кнопка 3"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Четвертая кнопка -->
        <Button
            android:id="@+id/menu_button_4"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="#D3D3D3"
            android:text="Кнопка 4"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Пятая кнопка -->
        <Button
            android:id="@+id/menu_button_5"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="#D3D3D3"
            android:text="Кнопка 5"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Шестая кнопка -->
        <Button
            android:id="@+id/menu_button_6"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:background="#D3D3D3"
            android:text="Кнопка 6"
            android:textColor="#000000"
            android:textSize="16sp" />

    </GridLayout>
</LinearLayout>
